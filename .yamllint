---

extends: default

ignore: |
  roles/

rules:
  document-start: disable
  comments-indentation: disable
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets:
    max-spaces-inside: 1
  colons:
    max-spaces-before: 0
    max-spaces-after: -1
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: -1
  line-length:
    max: 180
  indentation:
    spaces: 2
    indent-sequences: true
  new-lines:
    type: unix
  truthy: disable
  comments: disable
  empty-lines:
    max: 3
    max-start: 0
    max-end: 1
